{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Pigeon",
  "version": "1.0.0",
  "identifier": "com.pigeon.httpclient",
  "build": {
    "frontendDist": "../src"
  },
  "bundle": {
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Pigeon - HTTP Client",
        "width": 1400,
        "height": 900,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  }
}
